# Database
DATABASE_URL=mysql://root:devroot123@localhost:3309/prodrones_application

# NextAuth
NEXTAUTH_SECRET=your-secret-key-change-in-production
NEXTAUTH_URL=http://localhost:3003

# Encryption
AES_KEY=your-32-character-encryption-key

# Gmail OAuth2 (from Configuration table)
MAIL_CLIENT=gmail-oauth-client-id
MAIL_SECRET=gmail-oauth-secret
MAIL_REFRESH=gmail-oauth-refresh-token
MAIL_EMAIL=office@prodrones.com
MAIL_NAME=PDS

# App
NODE_ENV=development
PORT=3003
NEXT_PUBLIC_APP_URL=http://localhost:3003  # Public URL for email links and callbacks

# Docker MySQL
MYSQL_ROOT_PASSWORD=devroot123
MYSQL_DATABASE=prodrones_application

# Uploads
UPLOAD_TEMP_DIR=./uploads/temp
UPLOAD_FINAL_DIR=./uploads/final

# Email System (New V5)
EMAIL_PROVIDER=ethereal              # Options: ethereal (dev), resend (prod), sendgrid, console
EMAIL_FROM=noreply@prodrones.com     # Sender email address
EMAIL_FROM_NAME=ProDrones Hub        # Sender name

# Resend (Production) - Get key from https://resend.com
RESEND_API_KEY=re_xxxxxxxxxxxxx

# SendGrid (Alternative) - Get key from https://sendgrid.com
SENDGRID_API_KEY=SG.xxxxxxxxxxxxx

# Vercel KV (Redis) - For real-time presence
# Note: Vercel KV has migrated to Upstash Redis
# Auto-injected in production via Vercel dashboard
# For local dev: Create KV store in Vercel dashboard → Storage → Copy .env.local tab
# Currently disabled - uncomment and configure if you need real-time presence
# KV_URL=
# KV_REST_API_URL=
# KV_REST_API_TOKEN=
# KV_REST_API_READ_ONLY_TOKEN=

# Feature Toggles
NEXT_PUBLIC_PRESENCE_ENABLED=false
